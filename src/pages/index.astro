---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import SectionContainer from "../components/SectionContainer.astro";
import SocialPill from "../components/SocialPill.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import GitHubIcon from "../components/icons/GitHub.astro";
import MailIcon from "../components/icons/Mail.astro";
import Experience from "../components/Experience.astro";
import Briefcase from "../components/icons/Briefcase.astro";
import Code from "../components/icons/Code.astro";
import Projects from "../components/Projects.astro";
---

<Layout
	title="Portfolio de ernepazzo1212 -- Desarrollador y Programador Web con 7 años de experiencia"
	description="Contrata a ernepazzo1212 para crear tu aplicación web o móvil. Desarrollador web."
>
	<main class="px-4">
		<SectionContainer class="py-44 pb-32">
			<img
				class="rounded-full size-12 mb-4"
				src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRo0YgN4NFtqs5FAY9ANCdnagnvEqcGUOgSwCuL1SJk4Mc14s-dU2pZGzDdErHYhMYyqX4&usqp=CAU"
				alt="ernepazzo photo"
			/>
			<h1 class="text-white text-2xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10">
				Hey, soy ernepazzo <a
					href="https://linkedin.com/in/ernepazzo1212"
					target="_blank"
					rel="noopener"
					class="flex justify-center items-center"
					><Badge>Disponible para trabajar</Badge></a
				>
			</h1>
			<h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
				<span>+7 años de experiencia.</span>
				<span class="text-yellow-200/90"
					>Desarrollador Web y practicante de nuevas tecnologías.</span
				>
				<span class="text-red-200/90">De La Habana, Cuba 🇨🇺.</span>
				<span class="opacity-75"
					>Especializado en crear aplicaciones únicas.</span
				>
			</h2>

			<nav class="flex gap-4 mt-8 flex-wrap">
				<SocialPill href="https://linkedin.com/in/ernepazzo1212">
					<LinkedInIcon class="size-4 md-size-6" />
					 LinkedIn
				</SocialPill>
				<SocialPill href="https://github.com/ernepazzo">
					<GitHubIcon class="size-4 md-size-6" />
					 GitHub
				</SocialPill>
				<SocialPill href="mailto:ernepazzo1212@gmail.com">
					<MailIcon class="size-4 md-size-6" />
					 ernepazzo1212@gmail.com
				</SocialPill>
			</nav>
		</SectionContainer>

		<SectionContainer id="experiencia">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<Briefcase class="size-7" />
				Experiencia laboral
			</h2>
			<Experience />
		</SectionContainer>

		<SectionContainer id="proyectos">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<Code class="size-7" />
				Proyectos
			</h2>
			<Projects />
		</SectionContainer>
	</main>
</Layout>
